<h1>Måltider</h1>

<% @food_services.each do |food_service| %>
  <section class="content">
    <h2><%= human_relatable_time(food_service.opens_at, true) %></h2>
    <h3>Rätter</h3>
    <ul>
        <% food_service.dishes.each do |dish| %>
          <li><%= dish.description %></li>
        <% end %>
    </ul>
    <p><a href="<%= admin_food_service_path(food_service) %>">Redigera</a></p>
  </section>
<% end %>

<p><a class="button" href="<%= new_admin_food_service_path %>">Lägg till servering</a></p>

<% content_for :subnav do %>
  <%= render 'admin/information_subnav' %>
<% end %>
